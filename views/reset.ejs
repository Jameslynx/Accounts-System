<% addScripts() %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1><i class="fas fa-unlock-alt fa-3x"></i></h1>
      <%- include ('partials/messages') %>
      <form method="POST" action="/users/password/passwordReset">
        <div class="mb-3">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required="required"
            aria-describedby="emailHelp"
            placeholder="my-email..."
          />
          <div id="emailHelp" class="form-text">
            Enter registration email to reset password
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Reset</button>
      </form>
    </div>
  </div>
</div>
