<% addScripts() %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-key fa-3x"></i></h1>
      <%- include ("partials/messages") %>
      <form
        action="/users/password/passwordReset/<%= typeof userId != 'undefined' ? userId : '' %>/<%= typeof codeId != 'undefined' ? codeId : '' %>"
        method="POST"
      >
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="confirm">Confirm</label>
          <input
            type="password"
            id="confirm"
            name="confirm"
            class="form-control"
            placeholder="Enter Password"
            value="<%= typeof confirm != 'undefined' ? confirm : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>
