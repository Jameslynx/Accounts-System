<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-outline-light"
  data-toggle="modal"
  data-target="#staticBackdrop"
  id="modal-launcher"
>
  <i class="fas fa-file-upload"></i> upload photo
</button>

<!-- Modal -->
<div
  class="modal fade text-center"
  id="staticBackdrop"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          Profile Picture Upload
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <p class="white">
              Display pictures are important for people who are intrested in you
            </p>
          </div>
        </div>

        <form
          name="upload"
          method="post"
          action="/dashboard"
          enctype="multipart/form-data"
          accept-charset="utf-8"
          class="col-md-offset-3 text-center"
        >
          <div class="row">
            <div class="col col-md-offset-3 center">
              <div class="btn-container">
                <!--the three icons: default, ok file (img), error file (not an img)-->
                <h1 class="imgupload"><i class="fa fa-file-image-o"></i></h1>
                <div class="imgupload ok">
                  <div id="display" class="not-visible"></div>
                </div>
                <h1 class="imgupload stop"><i class="fa fa-times"></i></h1>
                <!--this field changes dynamically displaying the filename we are trying to upload-->
                <p id="namefile">Only pics allowed! (jpg,jpeg,bmp,png,gif)</p>
                <!--our custom btn which which stays under the actual one-->
                <button type="button" id="btnup" class="btn btn-primary btn-lg">
                  Browse for your pic!
                </button>
              </div>
            </div>
          </div>
          <!--additional fields-->
          <div class="row">
            <div class="col-md-12">
              <!--the default disabled btn and the actual one shown only if the three fields are valid-->
              <input
                type="submit"
                value="Submit!"
                class="btn btn-primary"
                id="submitbtn"
              />
              <input type="hidden" name="thumbnail" id="thumbnail" />
              <button
                type="button"
                class="btn btn-default"
                disabled="disabled"
                id="fakebtn"
              >
                Submit! <i class="fa fa-minus-circle"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
